[alias]
	st = status -sb
	cm = commit
	all = commit -am
	br = branch
	co = checkout
	di = diff
	dic = diff --cached
	lg = log -p
	lol = log --graph --decorate --pretty=oneline --abbrev-commit
	lola = log --graph --decorate --pretty=oneline --abbrev-commit --all

[color]
	ui = never

[core]
	whitespace=fix,-indent-with-non-tab,trailing-space,cr-at-eol
	editor = emacs -nw 
	quotepath = false

[github]
	user = demixire

[merg]
	tool = meld
	
[diff]
	tool = meld

[difftool]
    prompt = false

[difftool "meld"]
    cmd = meld "$LOCAL" "$REMOTE"

[push]
	default = current

[url "git@github.com:"]
	insteadOf = https://github.com/

[pull]
